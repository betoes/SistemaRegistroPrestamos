<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller ="GUI.PantallaSoftwareControlador">
	   <children>
      <AnchorPane layoutX="4.0" prefHeight="601.0" prefWidth="930.0">
         <children>
            <TableView fx:id="tbSoftware" layoutX="3.0" layoutY="14.0" prefHeight="487.0" prefWidth="920.0">
               <columns>
                <TableColumn prefWidth="60.0" text="ID">
                	<cellValueFactory>
                		<PropertyValueFactory property="idSoftware" />
                	</cellValueFactory> 
                </TableColumn>
                <TableColumn prefWidth="110.0" text="Nombre Software">
                	<cellValueFactory>
                		<PropertyValueFactory property="nombre" />
                	</cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="Versión">
                	<cellValueFactory>
                		<PropertyValueFactory property="version" />
                	</cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="72.0" text="Marca">
      					<cellValueFactory>
                		<PropertyValueFactory property="marca" />
                	</cellValueFactory>                
                </TableColumn>
                <TableColumn prefWidth="145.0" text="Idioma">
      					<cellValueFactory>
                		<PropertyValueFactory property="idioma" />
                	</cellValueFactory>                
                </TableColumn>
                <TableColumn minWidth="7.0" prefWidth="87.0" text="Monto">
      					<cellValueFactory>
                		<PropertyValueFactory property="monto" />
                	</cellValueFactory>                
                </TableColumn>
                <TableColumn minWidth="6.0" prefWidth="91.0" text="Origen">
      					<cellValueFactory>
                		<PropertyValueFactory property="origen" />
                	</cellValueFactory>                
                </TableColumn>
                <TableColumn prefWidth="108.0" text="Tipo">
      					<cellValueFactory>
                		<PropertyValueFactory property="tipo" />
                	</cellValueFactory>                
                </TableColumn>
                <TableColumn prefWidth="174.0" text="Descripción" >
		                 <cellValueFactory>
		                 <PropertyValueFactory property="descripcion" />
		             </cellValueFactory>                
		        </TableColumn>
              </columns>
            </TableView>
            <Button fx:id="bEliminar" layoutX="140.0" layoutY="539.0" mnemonicParsing="false" onAction = "#cargarPantallaSoftwareEliminar" prefHeight="39.0" prefWidth="116.0" text="Eliminar " />
            <Button fx:id="bModificar" layoutX="266.0" layoutY="539.0" mnemonicParsing="false" onAction="#cargarPantallaSoftwareModificar" prefHeight="39.0" prefWidth="116.0" text="Modificar " />
            <Button fx:id="bBuscar" layoutX="602.0" layoutY="539.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="116.0" text="Buscar" />
            <Button fx:id="bSalir" layoutX="804.0" layoutY="539.0" mnemonicParsing="false" onAction="#closeButtonAction" prefHeight="39.0" prefWidth="116.0" text="Salir" />
            <Button layoutX="14.0" layoutY="539.0" mnemonicParsing="false" onAction = "#cargarPantallaSoftwareAgregar" prefHeight="39.0" prefWidth="116.0" text="Agregar" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
